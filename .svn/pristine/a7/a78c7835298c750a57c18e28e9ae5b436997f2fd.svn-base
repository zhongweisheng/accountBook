.divcenter{
    width: 90%;
    margin:1rem auto 0;
    text-align: center;
}
.loginintpu{
    background-color: white;
    height: 1.8rem;
    line-height: 1.8rem;
    border: 1px solid #e0e0e0;
    border-radius: 1rem;
}
.input-left{
    font-size: 0.8rem;
    color: #777;
    margin:0 0.5rem 0;
    float: left;
}
.input-right{
    float: left;
    width: 75%;
    height: 1.8rem;
    line-height: 1.5rem;
    margin-top: 0.1rem;
}
.input-right input{
    border-style: none;
    height: 1.5rem;
    font-size: 0.6rem;
}
.loginintpu input-left{
    color: #a3a3a3;
    width: 70%;
}
.submitbtn{
    display: block;
    width: 100%;
    height: 1.7rem;
    border: 1px solid #ed9029;
    background-color: #ed9029;
    border-radius: 1rem;
    font-size: 0.8rem;
    color: white;
    line-height: 1.8rem;
}
.active{
    border: 1px solid #37a333;
}
.divcenter textarea{
    width: 100%;
    height: 4rem;
}