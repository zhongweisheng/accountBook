body,button,dd,dt,dl,form,h1,h2,h3,h4,h5,h6,input,li,ol,p,select,table,td,textarea,ul{margin:0;padding:0;}
html{font-size:20px;-ms-touch-action:none;}
body,button,input,select,textarea{font-family:"苹方","圆体-简","方正兰亭细黑简体","微软雅黑",Verdana,Arial,Helvetica,sans-serif;line-height:1.5;}
img{border:0;}
html,body{overflow-x:hidden;background-color: #f9f3f3;}
ol,ul,li{list-style:none;}
a{color:#333;text-decoration:none;outline:none;}
img{vertical-align:middle;}
*{-webkit-tap-highlight-color:rgba(0,0,0,0);}
.clearfix:after{visibility:hidden;display:block;font-size:0;content:" ";clear:both;height:0;}
.lf{
    float: left;
}
.rt{
    float:right;
}
.tab{
    width: 100%;
    height: 2rem;
    font-size: 0.9rem;
    background-color: #eceaeb;
}
.tab > div{
    width: 50%;
    height: 2rem;
    line-height: 2.1rem;
    border-bottom: 1px solid #ef6272;
    text-align: center;
}
.tab_active{
    background-color: #ef6272;
    color: #fff;
}
.nav{
    width: 100%;
    height: 1.5rem;
    color: #999999;
    margin-top: 0.5rem;
}
.nav{
    background-color: #fff;
}
.nav > ul > li{
    font-size: 0.8rem;
    float: left;
    width: 25%;
    height: 1.5rem;
    line-height: 1.6rem;
    text-align: center;
}
.nav_active{
    border-bottom: 1px solid #1b67a1;
    color: #f95b72;
}
.content{
    width: 100%;
}
.card{
    width: 96%;
    max-height: 4rem;
    padding: 3% 2%;
    margin-top: 0.5rem;
    color: #5c5c5c;
    background-color: #fff;
}
.card > div{
    float: left;
}
.media{
    width: 20%;
    height: 100%;
}
.media > img{
    width: 90%;
}
.list{
    width: 56%;
    height: 100%;
    margin-left: 1%;
}
.list > ul > li{
    font-size: 0.7rem;
    width:100%;
}
.list > ul > li > span{
    color:#ef6272;
}
.date{
    width: 23%;
    text-align: center;
    font-size: 0.7rem;
    color: #c1c1c1;
    padding: 0.5rem 0;
}
.date-one{
    width:30%;
    text-align: center;
    font-size: 0.7rem;
    color: #c1c1c1;
    padding: 1rem 0;
}

.spinner {
    height: 2rem;
    text-align: center;
    font-size: 10px;
}

.spinner > div {
    background-color: #ef6272;
    height: 100%;
    width: 6px;
    display: inline-block;

    -webkit-animation: stretchdelay 1.2s infinite ease-in-out;
    animation: stretchdelay 1.2s infinite ease-in-out;
}

.spinner .rect2 {
    -webkit-animation-delay: -1.1s;
    animation-delay: -1.1s;
}

.spinner .rect3 {
    -webkit-animation-delay: -1.0s;
    animation-delay: -1.0s;
}

.spinner .rect4 {
    -webkit-animation-delay: -0.9s;
    animation-delay: -0.9s;
}

.spinner .rect5 {
    -webkit-animation-delay: -0.8s;
    animation-delay: -0.8s;
}

@-webkit-keyframes stretchdelay {
    0%, 40%, 100% { -webkit-transform: scaleY(0.4) }
    20% { -webkit-transform: scaleY(1.0) }
}

@keyframes stretchdelay {
    0%, 40%, 100% {
        transform: scaleY(0.4);
        -webkit-transform: scaleY(0.4);
    }  20% {
           transform: scaleY(1.0);
           -webkit-transform: scaleY(1.0);
       }
}
.more-text{
    height: 1.5rem;
    text-align: center;
    color: #c1c1c1;
    font-size: 0.6rem;
    line-height: 1.5rem;
}
.hiden{
    display: none;
}
