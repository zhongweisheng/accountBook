body,button,dd,dt,dl,form,h1,h2,h3,h4,h5,h6,input,li,ol,p,select,table,td,textarea,ul{margin:0;padding:0;}
html{font-size:20px;-ms-touch-action:none;}
body,button,input,select,textarea{font-family:"苹方","圆体-简","方正兰亭细黑简体","微软雅黑",Verdana,Arial,Helvetica,sans-serif;line-height:1.5;}
img{border:0;}
html,body{overflow-x:hidden;background-color: #f6f7f9;}
ol,ul,li{list-style:none;}
a{color:#333;text-decoration:none;outline:none;}
img{vertical-align:middle;}
*{-webkit-tap-highlight-color:rgba(0,0,0,0);}
.clearfix:after{visibility:hidden;display:block;font-size:0;content:" ";clear:both;height:0;}
.lf{
    float: left;
}
.rt{
    float:right;
}
input,select{
    height: 28px;
    outline: 0;
    background: #fff;
}
input{
    border: 0;
}
div {
    font-size: 0.7rem;
}
.nav{
    background: #ed9029;
    position: fixed;
    top: 0;
    width: 100%;
    height: 2rem;
    line-height: 2rem;
    text-align: center;
    z-index: 100;
}
.nav>h2{
    margin: 0 auto;
    font-weight: normal;
    color: white;
    font-size: 16px;
}
.content{
    width: 100%;

    background: #fff;
    margin-bottom: 1rem;
}
.content:after{
    content: '';
    clear: both;
    height: 0;
}
.lineBlock{
    width: 100%;
    height: 2rem;
    line-height: 1.9rem;
    border-bottom: 1px solid #eee;
}
.lineBlock>div{
    font-size: 0.7rem;
    float: left;
}
.item-left{
    width: 40%;
    text-indent: 1rem;
}
.item-right{
    width: 58%;
}
.item-all{
    padding-left: 20px;
    float: left;
    width: 100%;
}
#change-add{
    color: #0a8ddf;
    float: right;
    height: 2rem;
    width: 14%;
    margin-right: 2%;
    cursor: pointer;

    background-size: 100%;
}
#change-sel{
    float: right;
    height: 2rem;
    width: 17%;
    margin-right: 2%;
    cursor: pointer;
}
#driver-add{
    float: right;
    height: 2rem;
    width: 14%;
    margin-right: 2%;
    cursor: pointer;
    color: #0a8ddf;
    background-size: 100%;
}
#driver-sel{
    float: right;
    height: 2rem;
    width: 17%;
    margin-right: 2%;
    cursor: pointer;
}
.btn{
    background: #ed9029;
    line-height:50px;
    flex: 1;

    color: #fff;
    display: inline-block;
    text-align: center;
    cursor: pointer;
}
.in-title{
    width: 100%;
    color: orange;
    font-size: 0.7rem;
    height: 1.6rem;
    line-height: 1.6rem;
    padding-left: 0.5rem;
}
.xmlist{
    display: none;
}
/*/--------------------------------------/*/
.select {
        cursor: pointer;

        height: 450px;
        width: 300px;
        border-radius: 10px;
        background-color: #f4f5f9;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
}
.select li{
        border-radius: 10px;
}
.select li:hover{
        background-color: orange;

}
.depotChange{
        background-color:orange;
        color: white;
}
.balanceModel{
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: 100;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    font-size: 14px;
}
.nav{
    position: relative;
}
.navRight{
    padding-right:15px;
    position: absolute;
    left: 87%;
    top:3%;
    color: white;
    background: url("../img/筛选.png") 29px center no-repeat;
    background-size: 10px;

}


.type{
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: 100;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    font-size: 14px;
}

.selectType li{
    font-size: 15px;
}
.selectType li:hover{
    background-color: #ed9029;
    color: white;

}
.depotChange{
    background-color:#ed9029;
    color: white;
}
.selectType {
    color: black;
    cursor: pointer;
    width: 300px;
    border-radius: 10px;
    background-color: #f4f5f9;
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.inFormSuccess{
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: 100;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    font-size: 14px;
}
.successContent{
    cursor: pointer;
    height: 300px;
    width: 268px;
    border-radius: 10px;
    background: url("../img/success.png") center no-repeat;
    position: absolute;
    top: 42%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.successBtn{
    display: flex;
    flex-flow: column;
    position: absolute;
    top: 36%;
    left: 22%;

}
.successBtn p {
    margin:  0 auto;
    flex: 1;
    height: 35px;
    border-radius: 3px;
    text-align: center;
    line-height: 35px;
    width: 150px;
    font-size: 15px;
}