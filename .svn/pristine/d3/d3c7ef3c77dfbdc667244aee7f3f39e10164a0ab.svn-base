.right {
    float: right;
    margin-top: 50px;
    width: calc(100% - 160px);
    width: -moz-calc(100% - 160px);
    width: -webkit-calc(100% - 160px);
}
.tab-container {
    width: 100%;
    height: 40px;
    margin: 40px auto 0;
}
.tab-col{
    float: left;
    width: 28%;
    text-align: center;
}
.tab-col-first{
    margin-left: 2%;
    float: left;
    width: 14%;
    text-align: center;
}
.tab-btn {
    cursor: pointer;
    width: 80px;
    height: 30px;
    text-align: center;
    margin: 0 auto;
}

.tab-btn-active {
    background: #44aac3;
    cursor: pointer;
    width: 80px;
    height: 30px;
    color: #fff;
    text-align: center;
    margin: 0 auto;
}
.selectReset{
    width: 80px;
    height: 30px;
    margin: 0;
    padding: 0;
    outline: 0;
}
.rightContent{
    width: 1000px;
}
.t-container{
    width: 98%;
    margin-left: 2%;
    border: 1px solid #ddd;
    box-shadow: 5px 5px 5px #999;
}
.t-top{
    width: 100%;
    padding: 10px;
    font-size: 24px;
    text-align: center;
}
.t-top-text{
    color: #5d91f4;
}
.t-left{
    float: left;
    width: 48%;
    margin-left: 2%;
}
.t-item{
    width: 100%;
    margin-bottom: 30px;
}
.item-media{
    display: inline-block;
    width: 5px;
    height: 28px;
    background-color: #5d91f4;
    vertical-align: middle;
}
.item-inner{
    display: inline-block;
    font-size: 16px;
    width: 475px;
    vertical-align: middle;
    border-bottom: 1px solid #5d91f4;
}
.inner-text{
    width: 50%;
}
.inner-color{
    font-size: 20px;
    color: #ef8f28;
}
.t-right{
    float: right;
    width: 48%;
    margin-right: 2%;
}
.t-r-top{
    width: 100%;
    margin-bottom: 10px;
    text-align: center;
}
.t-r-table{
    font-size: 16px;
    width: 95%;
    margin-left: 5%;
    text-align: center;
}
.t-r-table table{
    border-color: #eee;
    width: 100%;
    table-layout: fixed;
}
.c-margin{
    margin-left: 2%;
}
.c-container{
    width: 98%;
    margin-left: 2%;
}
.c-div{
    width: 49%;
    height: 350px;
    float: left;
    margin-bottom: 20px;
    border: 1px solid #ddd;
    box-shadow: 5px 5px 5px #999;
}


