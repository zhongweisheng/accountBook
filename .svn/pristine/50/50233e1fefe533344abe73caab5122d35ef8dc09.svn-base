body,button,dd,dt,dl,form,h1,h2,h3,h4,h5,h6,input,li,ol,p,select,table,td,textarea,ul{margin:0;padding:0;}
html{font-size:20px;-ms-touch-action:none;}
body,button,input,select,textarea{font-family:"苹方","圆体-简","方正兰亭细黑简体","微软雅黑",Verdana,Arial,Helvetica,sans-serif;line-height:1.5;}
img{border:0;}
html,body{overflow-x:hidden;background-color: #f6f7f9;}
ol,ul,li{list-style:none;}
a{color:#333;text-decoration:none;outline:none;}
img{vertical-align:middle;}
*{-webkit-tap-highlight-color:rgba(0,0,0,0);}
.clearfix:after{visibility:hidden;display:block;font-size:0;content:" ";clear:both;height:0;}
.lf{
    float: left;
}
.rt{
    float:right;
}
input,select{
    height: 28px;
    outline: 0;
    background: #fff;
}
input{
    border: 0;
}
div {
    font-size: 0.7rem;
}
.nav{
    background: #ed9029;
    position: fixed;
    top: 0;
    width: 100%;
    height: 2rem;
    line-height: 2rem;
    text-align: center;
    z-index: 100;
}
.nav>h2{
    color: white;
    margin: 0 auto;
    font-weight: normal;
    color: #333333;
}
.content{
    width: 100%;
    margin-top: 2rem;
    background: #fff;
    margin-bottom: 1rem;
}
.content:after{
    content: '';
    clear: both;
    height: 0;
}
.lineBlock{
    width: 100%;
    height: 2rem;
    line-height: 1.9rem;
    border-bottom: 1px solid #eee;
}
.lineBlock>div{
    font-size: 0.7rem;
    float: left;
}
.item-left{
    width: 40%;
    text-indent: 1rem;
}
.item-right{
    width: 58%;
}
.item-all{
    float: left;
    width: 100%;
}
#change-add{
    float: right;
    height: 2rem;
    width: 14%;
    margin-right: 2%;
    cursor: pointer;
    background: url(../img/add.jpg) no-repeat center;
    background-size: 100%;
}
#change-sel{
    float: right;
    height: 2rem;
    width: 17%;
    margin-right: 2%;
    cursor: pointer;
}
#driver-add{
    float: right;
    height: 2rem;
    width: 14%;
    margin-right: 2%;
    cursor: pointer;
    background: url(../img/add.jpg) no-repeat center;
    background-size: 100%;
}
#driver-sel{
    float: right;
    height: 2rem;
    width: 17%;
    margin-right: 2%;
    cursor: pointer;
}
.btn{
    background: #ed9029;
    line-height:1.4rem;
    width: 40%;
    margin-top: 0.3rem;
    color: #fff;
    display: inline-block;
    text-align: center;
    cursor: pointer;
}
.in-title{
    background-color: #848381;
    width: 100%;
    color: white;
    font-size: 0.7rem;
    height: 1.6rem;
    line-height: 1.6rem;
    padding-left: 0.5rem;
}
.xmlist{
    display: none;
}
