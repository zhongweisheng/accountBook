.right {
    float: right;
    border-left: 1px solid #aaa;
    margin-top: 50px;
    width: calc(100% - 160px);
    width: -moz-calc(100% - 160px);
    width: -webkit-calc(100% - 160px);
    height: 700px;
}
.rightHead {
    margin-top: 20px;
}
.rightHead > ul > li{
    text-align: center;
    font-size: 24px;
    color: #000;
}
.sCon{
    width: 100%;
    margin-top: 40px;
    margin-left: 20px;
    vertical-align: middle;
}
.sinput{
    width: 33%;
    float: left;
}
.sdate{
    float: left;
    margin-top: 20px;
    width: 100%;
}
.cardCon{
    width: 100%;
    height: 450px;
}
.card{
    float: left;
    cursor: pointer;
    width: 300px;
    height: 150px;
    margin-left: 30px;
    margin-top: 50px;
    border: 1px solid #aaa;
    border-radius: 5px;
    -webkit-box-shadow: 3px 3px 3px #666;
    -moz-box-shadow: 3px 3px 3px #666;
    box-shadow: 3px 3px 3px #666;
    position: relative;
}
.close{
    position: absolute;
    top: 5px;
    right: 10px;
    width: 20px;
    height: 20px;
    line-height: 15px;
    color: #aaa;
    border: 1px solid #aaa;
    border-radius: 10px;
    text-align: center;
}
.card ul{
    padding:35px 20px;
}
.card li{
    height: 40px;
    line-height: 40px;
    font-size: 16px;
}
.cardinnerl{
    display: inline-block;
    width: 49%;
    text-align: left;
    font-size: 14px;
}
.cardinnerr{
    display: inline-block;
    width: 49%;
    text-align: right;
    font-size: 14px;
}